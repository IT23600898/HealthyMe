<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="#EEEEEE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_bg"
            android:foregroundGravity="center">

            <ImageView
                android:id="@+id/reminderIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_pills"
                app:tint="@color/blue_primary" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/reminderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naproxen"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/reminderSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 pills (10 mg)"
                android:textSize="14sp"
                android:textColor="#666" />

            <TextView
                android:id="@+id/reminderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00 - 09:00"
                android:textSize="13sp"
                android:textColor="#888" />
        </LinearLayout>

        <ImageView
            android:id="@+id/reminderCheck"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/img_2"
            android:contentDescription="Active/Inactive"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@android:color/holo_red_dark"
            android:contentDescription="Delete Reminder" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
